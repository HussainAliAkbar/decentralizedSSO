{
  "name": "decentralized-sso",
  "version": "1.0.0",
  "description": "A POC for a decentralized SSO System",
  "main": "src/server.js",
  "scripts": {
    "start": "nodemon --inspect=3058 src/server.js",
    "lint": "./node_modules/.bin/eslint src",
    "lint:fix": "./node_modules/.bin/eslint src/ --fix",
    "gen:private:key": "openssl genrsa -out ./my-server.key.pem 2048",
    "gen:public:key": "openssl rsa -in ./my-server.key.pem -pubout -out ./my-server.pub"
  },
  "pre-commit": [
    "lint"
  ],
  "author": "Hussain Ali Akbar",
  "license": "ISC",
  "dependencies": {
    "@10pearls/revalidator": "^0.3.1",
    "body-parser": "^1.15.2",
    "bunyan": "^1.8.12",
    "chance": "^1.0.4",
    "compression": "^1.6.2",
    "convict": "^2.0.0",
    "express": "^4.14.0",
    "lodash": "^4.17.4",
    "method-override": "^2.3.7",
    "moment": "^2.22.1",
    "request": "^2.79.0",
    "request-promise": "^4.1.1",
    "restify-errors": "^4.3.0"
  },
  "devDependencies": {
    "eslint": "^5.6.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.1.2",
    "nodemon": "^1.18.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-fix"
    }
  }
}
